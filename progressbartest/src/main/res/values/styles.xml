<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal"></style>

    <style name="GPlusProgressBar" parent="MaterialProgressBar">
        <item name="mpb_stroke_separator_length">12dp</item>
        <item name="mpb_sections_count">4</item>
        <item name="mpb_speed">0.7</item>
        <item name="mpb_interpolator">mpb_interpolator_linear</item>
        <item name="mpb_colors">@array/gplus_colors</item>
    </style>

    <style name="GNowProgressBar" parent="MaterialProgressBar">
        <item name="mpb_stroke_separator_length">8dp</item>
        <item name="mpb_sections_count">2</item>
        <item name="mpb_speed">1.7</item>
        <item name="mpb_progressiveStart_speed">2</item>
        <item name="mpb_progressiveStop_speed">3.4</item>
        <item name="mpb_interpolator">mpb_interpolator_acceleratedecelerate</item>
        <item name="mpb_mirror_mode">true</item>
        <item name="mpb_reversed">true</item>
        <item name="mpb_colors">@array/gplus_colors</item>
        <item name="mpb_progressiveStart_activated">true</item>
        <item name="mpb_generate_background_with_colors">false</item>
    </style>

    <style name="GradientProgressBar" parent="MaterialProgressBar">
        <item name="mpb_stroke_separator_length">0dp</item>
        <item name="mpb_sections_count">3</item>
        <item name="mpb_speed">1.7</item>
        <item name="android:interpolator">@android:anim/decelerate_interpolator</item>
        <item name="mpb_colors">@array/gplus_colors</item>
        <item name="mpb_gradients">true</item>
    </style>

    <style name="PocketProgressBar" parent="MaterialProgressBar">
        <item name="mpb_stroke_separator_length">4dp</item>
        <item name="mpb_sections_count">4</item>
        <item name="mpb_speed">1</item>
        <item name="android:interpolator">@anim/pocket_interpolator</item>
        <item name="mpb_colors">@array/pocket_bar_colors</item>
        <item name="mpb_progressiveStart_activated">true</item>
        <item name="mpb_generate_background_with_colors">false</item>
    </style>

</resources>
