<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/line_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin" />

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/solid_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_end_color="@android:color/holo_red_light"
            app:progress_start_color="@android:color/holo_green_light"
            app:progress_start_degree="0"
            app:progress_text_color="@color/holo_blue_light"
            app:style="solid"
            app:progress_shader="sweep" />

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:drawBackgroundOutsideProgress="true"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_end_color="@android:color/transparent"
            app:progress_start_color="@android:color/transparent"
            app:progress_stroke_width="1dp"
            app:progress_text_color="@color/holo_blue_light"
            app:style="line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_shader="radial"
            app:progress_start_color="@color/holo_red_light"
            app:progress_stroke_width="1dp"
            app:progress_text_color="@color/holo_red_light"
            app:style="solid" />

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:line_count="30"
            app:line_width="2dp"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_start_color="@color/holo_orange_light"
            app:progress_stroke_width="1dp"
            app:progress_text_color="@color/holo_red_light"
            app:progress_text_size="@dimen/progress_text_size"
            app:style="line" />

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:line_count="30"
            app:line_width="4dp"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_end_color="@android:color/transparent"
            app:progress_shader="sweep"
            app:progress_start_color="@color/holo_purple"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="4dp"
            app:progress_text_color="@color/holo_purple"
            app:style="solid_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            android:clickable="true"
            app:progress_background_color="@android:color/transparent"
            app:progress_end_color="@color/holo_green_light"
            app:progress_start_color="@color/holo_green_light"
            app:progress_stroke_width="3dp"
            app:progress_text_color="@color/holo_green_light"
            app:style="solid_line"
            app:stop_anim_type="reverse_stop"
            app:center_color="@color/holo_blue_dark"
            app:show_value="true"
            app:center_src="@mipmap/ic_launcher_round" />

        <com.adrian.circleprogressbarlib.CircleProgressBar
            android:id="@+id/custom_progress6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/default_margin"
            app:progress_background_color="@color/holo_darker_gray"
            app:progress_start_color="@color/holo_green_light"
            app:progress_text_color="@color/holo_green_light"
            app:style="line" />

        <com.adrian.circleprogressbarlib.FantasticButton
            android:id="@+id/fantastic_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/default_margin" />

    </LinearLayout>

</LinearLayout>